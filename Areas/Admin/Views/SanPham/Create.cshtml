@{
    var DanhMuc = ViewData["lstDanhMuc"] as List<DanhMucSanPham>;
    var selectDanhMuc = DanhMuc?.Select(x => new SelectListItem
            {
                Text = x.TenDanhMuc,
                Value = x.MaDm.ToString()
            }).ToList();
}
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm</h4>
                <button type="button" class="close btn bg-transparent border-0" data-bs-dismiss="modal" onclick="closeModal()">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form asp-area="Admin" asp-controller="SanPham" asp-action="Create"
                      class="form-horizontal"
                      data-ajax="true"
                      data-ajax-begin="BlockUI()"
                      data-ajax-failure="UnBlockUI()"
                      data-ajax-method="POST"
                      data-ajax-success="successAction"
                      id="basicForm"
                      method="post"
                      novalidate="">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="TenSp" class="control-label col-md-2 text-right">Tên Sản Phẩm</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="TenSp" id="TenSp" >
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="anh" class="control-label col-md-2 text-right">Ảnh sản phẩm</label>
                                <div class="col-md-10">
                                    @Html.Partial("~/Areas/Admin/Views/Shared/UploadFilePage.cshtml", new WebHoaQua.Models.JqueryUploadModel{Name = "HinhAnh"})
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="MoTa" class="control-label col-md-2 text-right">Mô tả</label>
                                <div class="col-md-10">
                                    <textarea type="text" class="form-control" name="MoTa" id="MoTa" style="height: 100px"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="Gia" class="control-label col-md-2 text-right">Giá</label>
                                <div class="col-md-10">
                                    <input type="number" class="form-control" name="Gia" id="Gia" min="0" value="0">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="SoLuongTon" class="control-label col-md-2 text-right">Số lượng tồn</label>
                                <div class="col-md-10">
                                    <input type="number" class="form-control" name="SoLuongTon" id="SoLuongTon" min="0" value="0">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="row mb-3">
                            <label class="control-label col-md-2 text-right">Danh mục</label>
                            <div class="col-sm-10">
                                    @Html.DropDownList("MaDm", selectDanhMuc, new { @class = "form-select" })
                            </div>
                          </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="status" class="control-label col-md-2 text-right">Status</label>
                                <br>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" id="status" type="checkbox" name="TrangThai" value="true">
                                        <label class="form-check-label" for="status">
                                            Status
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Submit Button</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form><!-- End General Form Elements -->
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnclosemodel" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
