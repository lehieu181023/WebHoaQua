@{
    var DanhMuc = ViewData["lstDanhMuc"] as List<DanhMucSanPham>;
    var selectDanhMuc = DanhMuc?.Select(x => new SelectListItem
            {
                Text = x.TenDanhMuc,
                Value = x.MaDm.ToString()
            }).ToList();
}
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm</h4>
                <button type="button" class="close btn bg-transparent border-0" data-bs-dismiss="modal" onclick="closeModal()">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form asp-area="Admin" asp-controller="User" asp-action="Create"
                      class="form-horizontal"
                      data-ajax="true"
                      data-ajax-begin="BlockUI()"
                      data-ajax-failure="UnBlockUI()"
                      data-ajax-method="POST"
                      data-ajax-success="successAction"
                      id="basicForm"
                      method="post"
                      novalidate="">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="HoTen" class="control-label col-md-2 text-right">Họ và tên</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="HoTen" id="HoTen" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="Email" class="control-label col-md-2 text-right">Email</label>
                                <div class="col-md-10">
                                    <input type="email" class="form-control" name="Email" id="Email" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="Sdt" class="control-label col-md-2 text-right">Số điện thoại</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="Sdt" id="Sdt" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="MatKhau" class="control-label col-md-2 text-right">Mật khẩu</label>
                                <div class="col-md-10">
                                    <input type="password" class="form-control" name="MatKhau" id="MatKhau" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="DiaChi" class="control-label col-md-2 text-right">Địa chỉ</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="DiaChi" id="DiaChi">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="Role" class="control-label col-md-2 text-right">Vai trò</label>
                                <div class="col-md-10">
                                    <select class="form-select" name="Role" required>
                                        <option >-- Chọn vai trò --</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Custumer">Custumer</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label for="status" class="control-label col-md-2 text-right">Trạng thái</label>
                                <br>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" id="status" type="checkbox" name="TrangThai" value="true">
                                        <label class="form-check-label" for="status">
                                            Status
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Submit Button</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form><!-- End General Form Elements -->
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnclosemodel" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
